<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/b53b8d2357.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class: "navbar-brand" %>
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to "Home", user_path(current_user), class: "nav-link text-light" %>
              </li>
              <li>
                <%= link_to "Users", users_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%= link_to "Books", books_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, class: "nav-link text-light", method: :delete %>
              </li>
            </ul>
        </div>
      </nav>
      <% else %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class: "navbar-brand" %>
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to "Home", root_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%= link_to "About", about_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%= link_to "Sign up", new_user_registration_path, class: "nav-link text-light" %>
              </li>
              <li>
                <%= link_to "Log in", new_user_session_path, class: "nav-link text-light" %>
              </li>
            </ul>
        </div>
      </nav>
      <% end %>
    </header>
    <p id="notice"></p>
    <%= yield %>
  </body>
</html>
