<%= form_with model: book, local: true do |f| %>
  <div class="form-group">
    <h4>Title</h4>
      <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <h4>Opinion</h4>
    <div class="text-body">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  <div>
    <%= f.submit class: "submit btn btn-success" %>
  </div>
<% end %>