<div class="col-md-3">
      <h2>User info</h2>
  <!--もし@userの値がなければ@userにcurrent_userを代入-->
  
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.get_profile_image(100,100) %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
        	  <th>name</th>
        	  <th><%= @user.name %></th>
          </tr>
          <tr>
        	  <th>introduction</th>
        	  <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div>
        <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block', method: :get do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>

      <!--form_with部分-->
      <%= form_with model: Book.new, url: '/books', method: :post do |f| %>
        <div class="form-group">
          <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
          <div class="text-body">
            <%= f.text_area :body %>
          </div>
        </div>
        <div>
          <%= f.submit 'Create Book', class: "submit btn btn-success" %>
        </div>
      <% end %>
</div>