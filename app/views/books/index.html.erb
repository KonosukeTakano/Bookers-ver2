<!--改行するためのメソッドを定義-->
<% str = "\n" %>
<% def html_safe_newline(str) h(str).gsub(/\n|\r|\r\n/, "<br>").html_safe end %>
<!--ここまで-->

<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <div class="error-message">&nbsp;&nbsp;<%= @book.errors.count %> error occurred</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="container">
    <div class="row">
      <%= render partial: 'index#sidebar/sidebar', locals: { book: @book, user: @user } %>

  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>

      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="BookTable table table-hover table-inverse tbl-r02">
          <thead>
            <tr>
              <th class="list-wrap">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
              <th class="list-wrap">Title</th>
              <th class="list-wrap">Opinion</th>
              <th class="list-wrap">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
                <tr class="list-wrap">
                  <td class="list-box">
                    <% if book.user.profile_image.attached? %>
                      <%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(user_id) %>
                    <% else %>
                      <%= link_to image_tag('no_image', size: "100x100"), user_path(user_id) %>
                    <% end %>
                  </td>
                  <td class="list-box"><%= link_to book.title , book_path(book.id) %></td>
                  <td class="list-box list-body"><%= book.body %></td>
                  <td>
                    <% if book.favorited_by?(current_user) %>
                      <%= link_to book_favorites_path(book), method: :delete do %>
                         Like！
                        <i class="fa-solid fa-heart"></i>
                        <%= book.favorites.count %>
                      <% end %>
                    <% else %>
                      <%= link_to book_favorites_path(book), method: :post do %>
                         Like！
                        <i class="fa-regular fa-heart"></i>
                        <%= book.favorites.count %>
                      <% end %>
                    <% end %>
                    &nbsp;&nbsp;&nbsp;
                    <!--↓改行-->
                    <%= html_safe_newline(str) %>
                    <!--↑-->
                    <%= link_to "#{book.book_comments.count}comment", book_path(book.id), {class: "book_comments"} %>
                  </td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
</div>