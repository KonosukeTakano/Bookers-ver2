<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <div class="error-message">&nbsp;&nbsp;<%= @book.errors.count %> error occurred</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <div class="container">
    <div class="row">
      <%= render partial: 'index#sidebar/sidebar', locals: { book: @book, user: @user } %>

  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>

      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="BookTable table table-hover table-inverse">
          <thead>
            <tr>
              <th class="list-wrap">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
              <th class="list-wrap">Title</th>
              <th class="list-wrap">Opinion</th>
              <th class="list-wrap">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
                <tr class="list-wrap">
                  <td class="list-box">
                    <% if book.user.profile_image.attached? %>
                      <%= link_to image_tag(book.user.get_profile_image(100,100)), "/users/#{book.user.id}" %>
                    <% else %>
                      <%= link_to image_tag('no_image', size: "100x100"), "users/#{book.user.id}" %>
                    <% end %>
                  </td>
                  <td class="list-box"><%= link_to book.title , book_path(book.id) %></td>
                  <td class="list-box list-body"><%= book.body %></td>
                  <% if book.favorited_by?(current_user) %>
                    <td>
                      <%= link_to book_favorites_path(book), method: :delete do %>
                        ♥<%= book.favorites.count %> Like!
                      <% end %>
                    </td>
                  <% else %>
                    <td>
                      <%= link_to book_favorites_path(book), method: :post do %>
                        ♡<%= book.favorites.count %> Like!
                      <% end %>
                    </td>
                  <% end %>
                  <td>
                    <%= link_to "#{book.book_comments.count} comments", book_path(book.id) %>
                  </td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>  
</div>
</div>