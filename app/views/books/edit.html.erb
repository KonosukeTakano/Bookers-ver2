<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>Editing Book</h1>
  <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
    <div class="text-body">
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Update Book', class:"submit btn btn-success" %>
    </div>
  <% end %>
</div>