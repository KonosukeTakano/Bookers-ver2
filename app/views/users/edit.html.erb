<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
          <div class="error-message"><%= @user.errors.count %> error occurred</div>
          <% @user.errors.full_messages.each do |message| %>
            <div><%= message %></div>
          <% end %>
      <% end %>
  
      <%= form_with model: @user, url: update_user_path(@user.id) , method: :patch do |f| %>
        <div class="form-group">
          <div>
            <label for="inputName">Name</label>
          </div>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", :class => 'form-control' %>  
        </div>
        
        <div class="form-group">
          <div><label for="inputImage">Image</label></div>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        </div>
        
        <div class="form-group">
          <%= f.label :introduction %>
          <div><%= f.text_area :introduction, :class => 'form-control' %></div>
        </div>
        
        <div class="form-group">
          <%= f.submit 'Update User', class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>