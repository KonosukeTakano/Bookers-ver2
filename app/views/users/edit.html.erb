<div>
  <h2>User info</h2>
  
  <% if @user.errors.any? %>
      <div class="error-message"><%= @user.errors.count %> error occurred</div>
      <% @user.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
  <% end %>
  
  <%= form_with model: @user, url: update_user_path(@user.id) , method: :patch do |f| %>
  
    <div>
      <label for="inputName">Name</label>
    </div>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    
    <div><label for="inputImage">Image</label></div>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
    
    <div>
      <%= f.label :introduction %>
      <div><%= f.text_area :introduction %></div>
    </div>
    
    <%= f.submit 'Update User' %>
  
  <% end %>
</div>