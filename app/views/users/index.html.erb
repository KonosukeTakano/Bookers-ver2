<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      
      <% if current_user.profile_image.attached? %>
        <%= image_tag current_user.get_profile_image(100,100) %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
        	  <th>name</th>
        	  <th><%= current_user.name %></th>
          </tr>
          <tr>
        	  <th>introduction</th>
        	  <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      
      <div>
        <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block', method: :get do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      
      <h2 class="mt-3">New book</h2>

      <!--form_with部分                ↓このへんでエラー-->
      <%= form_with model: @books, url: '/books', method: :post do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>Opinion</h4>
        <div class="text-body">
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Create Book', class:"submit btn btn-success" %>
        </div>
      <% end %>
      
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="BookTable table table-hover table-inverse">
        <thead>
          <tr>
            <th class="list-wrap">image</th>
            <th class="list-wrap">name</th>
            <th class="list-wrap">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
                  <tr class="list-wrap">
                    <td class="list-box">
                      <% if user.profile_image.attached? %> 
                        <%= image_tag user.get_profile_image(100,100) %>
                      <% else %>
                        <%= image_tag 'no_image', size: "100x100" %>
                      <% end %>
                    </td>
                    <td><%= user.name %></td>
                    <td class="list-box list-body"><%= link_to "Show", user_path(user.id) %></td>
                  </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>