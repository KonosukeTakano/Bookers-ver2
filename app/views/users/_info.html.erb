<% if user.profile_image.attached? %>
  <%= image_tag(user.get_profile_image(100,100)) %>
<% else %>
  <%= image_tag('no_image', size: "100x100") %>
<% end %>

<table class="table">
  <tbody>
    <tr></tr>
    <tr>
  	  <th>name</th>
  	  <th><%= user.name %></th>
    </tr>
    <tr>
  	  <th>introduction</th>
  	  <th><%= user.introduction %></th>
    </tr>
    <tr>
  	  <th><%= link_to "#{ user.followings.count }follows", user_followings_path(user.id), id: "following-count_#{ user.id }" %></th>
  	  <th></th>
    </tr>
    <tr>
  	  <th><%= link_to "#{ user.followers.count }followers", user_followers_path(user.id), id: "follower-count_#{ user.id }" %></th>
  	  <th></th>
    </tr>
  </tbody>
</table>

<div class='row'>
  <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block', method: :get do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>