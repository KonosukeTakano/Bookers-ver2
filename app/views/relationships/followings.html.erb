<div class="container px-5 px-sm-0">
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-1">
        <h1>Follows</h1>
        <table class="BookTable table table-hover table-inverse">
          <thead>
            <tr>
              <th class="list-wrap">image</th>
              <th class="list-wrap">name</th>
              <th class="list-wrap">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
              <th class="list-wrap">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
              <th class="list-wrap">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
              <th class="list-wrap">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
                    <tr class="list-wrap">
                      <td class="list-box">
                        <% if user.profile_image.attached? %> 
                          <%= image_tag user.get_profile_image(100,100) %>
                        <% else %>
                          <%= image_tag 'no_image', size: "100x100" %>
                        <% end %>
                      </td>
                      <td><%= user.name %></td>
                      <td>follows:<%= user.followings.count %></td>
                      <td>followers:<%= user.followers.count %></td>
                      <td class="list-box list-body"><%= link_to "Show", user_path(user.id) %></td>
                    </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>